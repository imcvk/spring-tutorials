<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <!--    byName auto-wiring In case of byName auto-wiring mode, bean id and reference name must be same.-->
    <!--    <bean id="b" class="com.spring.setter.com.spring.B"/>-->
    <!--    <bean id="a" class="com.spring.setter.com.spring.A" autowire="byName"/>-->

    <!-- byType auto-wiring -In case of byType auto-wiring mode, bean id and reference name may be different. But there must be only one bean of a type.-->
    <!--    <bean id="b" class="com.spring.setter.com.spring.B"/>-->
    <!--    <bean id="a" class="com.spring.setter.com.spring.A" autowire="byType"/>-->

    <!--  constructor autowiring -In case of constructor auto-wiring mode, spring container injects the dependency by highest parameterized constructor. -->
    <!--        <bean id="b" class="com.spring.setter.com.spring.B"/>-->
    <!--        <bean id="a" class="com.spring.setter.com.spring.A" autowire="constructor"/>-->

    <!--  no autowiring -In case of no autowiring mode, spring container doesn't inject the dependency by autowiring. -->
    <bean id="b" class="com.spring.setter.com.spring.B"/>
    <bean id="a" class="com.spring.setter.com.spring.A" autowire="no"/>

</beans>